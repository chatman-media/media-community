# Production Environment Variables

# Frontend (Vercel)
NEXT_PUBLIC_API_URL=https://your-api-domain.railway.app
NEXT_PUBLIC_WS_URL=wss://your-api-domain.railway.app
NEXT_PUBLIC_APP_URL=https://chatman-media.vercel.app
NODE_ENV=production

# Backend (Railway/Render)
PORT=2001
NODE_ENV=production

# Database (Railway PostgreSQL)
DATABASE_URL=postgresql://username:password@hostname:5432/database

# Redis (Railway Redis)
REDIS_URL=redis://hostname:6379

# JWT
JWT_SECRET=CHANGE-THIS-TO-SECURE-RANDOM-STRING-IN-PRODUCTION
JWT_EXPIRES_IN=7d

# CORS
CORS_ALLOWED_ORIGINS=https://chatman-media.vercel.app,https://your-custom-domain.com
